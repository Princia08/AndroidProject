<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Icône de la notification -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/baseline_event_available_24" /> <!-- Remplacez par la ressource de votre icône -->

    <!-- Contenu de la notification -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/notification_icon"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <!-- Titre de la notification -->
        <TextView
            android:id="@+id/notification_titre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Titre de la notification"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Texte de la notification -->
        <TextView
            android:id="@+id/notification_contenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contenu de la notification"
            android:textSize="14sp" />

        <!-- Date de la notification -->
        <TextView
            android:id="@+id/notification_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6 août 2023"
            android:textSize="12sp"
            android:textColor="#888888" /> <!-- Couleur du texte de la date -->

        <!-- Ligne ajoutée en bas de tous les éléments -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="#DDDDDD" /> <!-- Couleur de la ligne -->

    </LinearLayout>

</RelativeLayout>
