<!-- spinner_bg.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Couleur de fond lorsqu'appuyé -->
            <corners android:radius="4dp" /> <!-- Coins arrondis -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Couleur de fond par défaut -->
            <corners android:radius="4dp" /> <!-- Coins arrondis -->
            <stroke android:color="#CCCCCC" android:width="1dp" /> <!-- Bordure légère -->
        </shape>
    </item>
</selector>
